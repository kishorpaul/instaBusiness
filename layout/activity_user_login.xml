<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#fff"
    tools:context=".App2.Users.UserLoginActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:transitionName="logoImage"
        android:src="@drawable/android"
        android:id="@+id/login_image"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/login_name"
        android:layout_width="wrap_content"
        android:transitionName="logoText"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Hello there, Welcome Back"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:transitionName="logoT2"
        android:text="Sign in to continue"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/login_phone"
            android:theme="@style/TextLabel"
            android:hint="Phone Number"
            app:endIconMode="clear_text"
            app:endIconTint="@color/colorPrimaryDark"
            android:transitionName="logoe1"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:maxLength="10"
                android:inputType="number"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/login_password"
            android:theme="@style/TextLabel"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/colorPrimaryDark"
            android:hint="Password"
            android:transitionName="logoe2"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:text="Remember Me"
                android:layout_weight="1"
                android:id="@+id/login_remember_me"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="200dp"
                android:text="Forgot Password?"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:id="@+id/login_forgotPass"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:background="#00000000"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/login_btn"
            android:text="Login"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="right"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:transitionName="logob1"
            android:drawableEnd="@drawable/right_arrow_white"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"/>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/new_user_btn"
            android:text="New User?"
            android:transitionName="logob2"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="right"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:drawableEnd="@drawable/right_arrow_white"
            android:layout_height="wrap_content"
            android:background="#00000000"/>
    </LinearLayout>

