<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".App2.Sellers.SellerHomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_logout"
        android:id="@+id/tt1"
        android:text="Seller Home"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tt1"
        android:layout_centerHorizontal="true"
        android:background="#efefef"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tt2"
        android:textStyle="bold"
        android:layout_below="@id/tt1"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:text="Add New Product"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/ll2"
        android:orientation="horizontal"
        android:layout_below="@id/ll1"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/sunglasses"
            android:src="@drawable/glasses"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/bags"
            android:src="@drawable/shoess"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/hat"
            android:src="@drawable/phone"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/shoes"
            android:src="@drawable/shoess"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:layout_below="@id/tt2"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/mobiles"
            android:src="@drawable/phone"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/laptops"
            android:src="@drawable/watch"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/watches"
            android:src="@drawable/watches"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/headphones"
            android:src="@drawable/shoess"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        app:cardElevation="4dp"
        android:id="@+id/seller_all_products"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_above="@id/seller_logout"
        android:background="#efefef"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/orders"
            android:text="My Product"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/seller_home_userName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:drawableStart="@drawable/person"
        android:textColor="#000"
        android:layout_marginRight="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="10dp"
        android:padding="8dp"
        app:cardElevation="4dp"
        android:id="@+id/seller_logout"
        android:background="#efefef"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/logout"
            android:text="Logout"
            android:textSize="11dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>