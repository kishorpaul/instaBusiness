<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".App2.Common.SplashScreenActivity">

    <ImageView
        android:layout_width="200dp"
        android:id="@+id/splash_image"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:transitionName="image1"
        android:src="@drawable/cash02"/>

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-black"
        android:text="Insta Business"
        android:layout_above="@id/splash_text2"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="32sp"
        android:transitionName="text1" />

    <TextView
        android:id="@+id/splash_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        android:text="By KishorPaul"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="16sp"
        android:transitionName="text1" />

</RelativeLayout>