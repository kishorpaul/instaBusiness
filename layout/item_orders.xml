<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="6dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/cash02"
            android:id="@+id/item_order_pImage"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll1"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_order_uName"
                android:text="User Name"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_order_contact"
                android:text="Contact Number"
                android:textAlignment="textStart"
                android:layout_below="@id/item_order_uName"
                android:textColor="#000"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:id="@+id/item_order_ttlPrice"
                android:text="Total Price"

                android:layout_below="@id/item_order_contact"
                android:textColor="#000"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:layout_margin="8dp"
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#efefef"
            android:layout_below="@id/ll1"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_order_address"
            android:text="Order Address"
            android:layout_below="@id/view1"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_order_date"
            android:text="Order Date"
            android:layout_below="@id/item_order_address"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="16sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_order_date"
            android:id="@+id/item_order_ViewAll"
            android:background="@drawable/input_white_bg"
            android:layout_marginTop="8dp"
            android:text="View All Products"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>