<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="10dp"
    tools:context=".App2.Admin.AdminHomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ll1"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="10dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            android:layout_alignParentStart="true"
            android:id="@+id/admin_logout"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:background="#efefef"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/logout"
                android:text="Logout"
                android:textSize="12dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adminHomeName"
            android:textStyle="bold"
            android:drawableStart="@drawable/person"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:text="  Admin Name"
            android:textSize="16sp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tt2"
        android:layout_below="@id/ll1"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:text="Admin Home"
        android:textSize="22sp"/>

    <View
        android:layout_width="180dp"
        android:background="#efefef"
        android:layout_height="2dp"
        android:layout_below="@id/tt2"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_settings_"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tt2"
        android:layout_marginTop="100dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        app:cardElevation="4dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/admin_allOrders"
        android:layout_above="@id/admin_allwaitingProd"
        android:layout_marginRight="10dp"
        android:background="#efefef"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/cart"
            android:text="New Wishes from User"
            android:maxWidth="180dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        android:layout_above="@id/admin_allwaitingProd"
        app:cardElevation="4dp"
        android:id="@+id/admin_manageProd"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/admin_allOrders"
        android:background="#efefef"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/pencil"
            android:text="Manage Products"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        app:cardElevation="4dp"
        android:id="@+id/admin_allWishesList"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#efefef"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/orders"
            android:text="Wished History"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        app:cardElevation="4dp"
        android:id="@+id/admin_allwaitingProd"
        android:layout_above="@id/admin_allWishesList"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="8dp"
        android:background="#efefef"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/orders"
            android:text="Waiting List from Seller"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>