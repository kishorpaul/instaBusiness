<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    tools:context=".App2.LoginSignUp.MerchantSignUp3activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/merch_reg_back"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number "
                android:layout_marginLeft="10dp"
                android:textSize="22sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-black" />

              <com.hbb20.CountryCodePicker
                  android:layout_width="wrap_content"
                  app:ccp_autoDetectCountry="true"
                  android:layout_marginTop="20dp"
                  app:ccp_showFlag="true"
                  app:ccp_showNameCode="true"
                  android:layout_height="wrap_content"/>

              <com.google.android.material.textfield.TextInputLayout
                  android:layout_width="match_parent"
                  android:background="@drawable/input_bg"
                  android:layout_marginTop="10dp"
                  android:hint="10 Digit Phone Number"
                  android:layout_height="wrap_content">

                  <com.google.android.material.textfield.TextInputEditText
                      android:layout_width="match_parent"
                      android:maxLength="10"
                      android:layout_height="match_parent"
                      android:inputType="phone" />

              </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:background="@drawable/button_bg"
                android:layout_marginTop="30dp"
                android:onClick="callNext"
                android:text="Next"
                android:textColor="#fff"
                android:fontFamily="sans-serif-black"
                android:textSize="18sp"
                android:id="@+id/merch_reg_nextBtn"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:background="#00000000"
                android:layout_marginTop="20dp"
                android:text="Login"
                android:textColor="#000"
                android:fontFamily="sans-serif-black"
                android:textSize="16dp"
                android:id="@+id/merch_login_calllogin"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>