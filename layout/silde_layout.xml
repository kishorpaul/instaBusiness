<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="#fff"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="40dp"
        android:id="@+id/slide1_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/android"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/slide1_text1"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide1_image"
        android:text="@string/first_sTitle"
        android:fontFamily="sans-serif-black"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/slide1_text2"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide1_text1"
        android:text="@string/first_desc"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="#000"/>

</RelativeLayout>