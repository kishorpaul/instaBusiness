<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/rr1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Payment Method"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:autoSizeMaxTextSize="10dp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:id="@+id/ll1"
            android:layout_below="@id/textView"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:scaleType="fitCenter"
                    android:layout_height="60dp"
                    android:id="@+id/payment_cahOnDelivery"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/cash03"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="Cash On Delivery"
                    android:gravity="center"
                    android:layout_below="@id/payment_cahOnDelivery"/>
            </RelativeLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="#efefef"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/payment_paytm"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:src="@drawable/paytm"/>

<!--                <TextView-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="60dp"-->
<!--                    android:layout_marginLeft="30dp"-->
<!--                    android:padding="10dp"-->
<!--                    android:text="PAYTM"-->
<!--                    android:textSize="22sp"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="#000"-->
<!--                    android:gravity="center"-->
<!--                    android:id="@+id/payment_paytm"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textStyle="normal"
                    android:text="Paytm"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/payment_paytm"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>