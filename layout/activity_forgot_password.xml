<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="20dp"
    tools:context=".App2.Users.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgotPass_close"
            android:src="@drawable/close_black"/>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/pass"
            android:layout_width="170dp"
            android:layout_height="170dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Forgot\nPassword"
            android:textColor="#000"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Find Access to your Account"
            android:textColor="#000"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="match_parent"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:boxBackgroundColor="#efefef"
            android:hint="Enter Phone Number"
            android:id="@+id/forgotPass_phone"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:drawableStart="@drawable/phone_locked"
            android:drawablePadding="10dp"
            android:inputType="phone"
            android:maxLength="10"
            android:background="@drawable/input_grey_bg"
            android:layout_height="45dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:text="Next"
            android:layout_marginTop="30dp"
            android:visibility="visible"
            android:id="@+id/forgotPass_next"
            android:textColor="#fff"
            android:fontFamily="sans-serif-black"
            android:textSize="18sp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="-50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/forgotPass_pb"/>

    </LinearLayout>
</ScrollView>