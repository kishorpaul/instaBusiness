<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/cash02"
            android:id="@+id/item_search_image"
            android:layout_height="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/item_search_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="Item Name"
            android:id="@+id/item_search_name"
            android:textColor="#000"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/item_search_name"
            android:layout_toRightOf="@id/item_search_image"
            android:text="Item Name"
            android:id="@+id/item_search_desc"
            android:textColor="#000"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/item_search_image"
            android:layout_marginTop="15dp"
            android:id="@+id/view1"
            android:background="#efefef"/>

        <TextView
            android:layout_below="@id/view1"
            android:layout_marginTop="10dp"
            android:text="$Price"
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/item_search_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>