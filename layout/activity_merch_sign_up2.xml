<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".App2.LoginSignUp.MerchSignUp2Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/merch_reg_back"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Gender"
                android:layout_marginLeft="10dp"
                android:textSize="22sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-black" />

        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="18sp"
                android:id="@+id/merch_reg2_male"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Female"
                android:textSize="18sp"
                android:id="@+id/merch_reg2_female"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/merch_reg2_others"/>
        </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9A8F8F"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Your Age"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-black" />

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:spinnersShown="true"
                />

            <Button
                android:layout_width="match_parent"
                android:background="@drawable/button_bg"
                android:layout_marginTop="30dp"
                android:text="Next"
                android:textColor="#fff"
                android:onClick="callNextScreen"
                android:fontFamily="sans-serif-black"
                android:textSize="18sp"
                android:id="@+id/merch_reg_nextBtn"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:background="#00000000"
                android:layout_marginTop="20dp"
                android:text="Login"
                android:textColor="#000"
                android:fontFamily="sans-serif-black"
                android:textSize="16dp"
                android:id="@+id/merch_login_calllogin"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>