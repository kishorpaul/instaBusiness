<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="20dp"
    tools:context=".App2.Users.ChooseResetPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/choose_reset_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Make\nSelection"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="monospace"
            android:text="Choose a method to Reset Password"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="19sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="#efefef"
            android:padding="15dp">

            <ImageView
                android:id="@+id/rl1_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/rl1_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_toRightOf="@id/rl1_image"
                android:fontFamily="sans-serif-black"
                android:text="Send an OTP"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl1_text1"
                android:layout_marginTop="8dp"
                android:id="@+id/choose_reset_phone"
                android:layout_toRightOf="@id/rl1_image"
                android:fontFamily="sans-serif-black"
                android:text="on +910000000000"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/choose_reset_phBtn"
                android:background="#00000000"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="#efefef"
            android:padding="15dp">

            <ImageView
                android:id="@+id/rl2_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/mail" />

            <TextView
                android:id="@+id/rl2_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_toRightOf="@id/rl2_image"
                android:fontFamily="sans-serif-black"
                android:text="Send link via Mail"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/choose_reset_email"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl2_text1"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/rl2_image"
                android:fontFamily="sans-serif-black"
                android:text="on kish@gmail.com"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/choose_reset_emailBtn"
                android:layout_height="match_parent"
                android:background="#00000000"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>