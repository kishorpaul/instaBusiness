<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#fff"
    tools:context=".App2.LoginSignUp.MerchantStartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/merch_start_close"
            android:src="@drawable/close_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cart"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Grow\nYour Business"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:text="Make Business at your Style"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_marginLeft="20dp"
            android:onClick="callAdmin"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Login"
                android:textAlignment="center"
                android:padding="10dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="sans-serif-black"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:background="#efefef" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm a Seller"
            android:textAlignment="textStart"
            android:padding="10dp"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-black"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-black"
                android:text="Login"
                android:onClick="callLogin"
                android:id="@+id/merch_start_login"
                android:transitionName="trans_login"
                android:layout_weight="1"/>

            <Button
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/merch_start_reg"
                android:onClick="callReg"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:text="Register"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>