<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:layout_height="140dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:id="@+id/mVI_image"
            android:layout_gravity="center_vertical"
            android:src="@drawable/android" />

        <TextView
            android:layout_toRightOf="@id/mVI_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="McDonalds"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:id="@+id/mVI_name"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_toRightOf="@id/mVI_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/mVI_name"
            android:text="Price"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:id="@+id/mVI_price"
            android:layout_gravity="center_horizontal"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/mVI_image"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/mVI_price"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/mVI_desc"
                android:layout_height="wrap_content"
                android:text="This place has the city's favorite serving and Ambience"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_gravity="center_horizontal"/>
        </ScrollView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>