<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="6dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textColor="#000"
            android:id="@+id/item_seller_pName"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/item_seller_pImage"
            android:scaleType="centerCrop"
            android:layout_marginTop="4dp"
            android:src="@drawable/google"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="Product desc"
            android:layout_below="@id/item_seller_pName"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:maxWidth="180dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:id="@+id/item_seller_pDesc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_seller_pDesc"
            android:id="@+id/item_seller_pPrice"
            android:textSize="15sp"
            android:maxWidth="180dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentEnd="true"
            android:text="Product Price"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_seller_pPrice"
            android:id="@+id/item_seller_pStatus"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:text="Product Status"
            android:textColor="#000" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>