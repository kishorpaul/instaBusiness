<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="6dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID"
            android:maxWidth="200dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/item_user_order_id"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Through"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_below="@id/item_user_order_id"
            android:id="@+id/item_user_order_through"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@+id/item_user_order_amount"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Date"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_below="@id/item_user_order_through"
            android:id="@+id/item_user_order_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order State"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_user_order_through"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/item_user_order_state"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#efefef"
            android:layout_below="@id/item_user_order_state"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>